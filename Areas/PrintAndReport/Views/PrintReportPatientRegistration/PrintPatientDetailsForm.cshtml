            top: 71px;
            right: 0;
        }

        #btnSticky {
            position: sticky;
            top: 0;
        }

        h1 {
            text-align: center;
        }

        label {
            font-weight: bold;
        }

        h5 {
            text-decoration: underline;
        }
    </style>
    <style id="less:concepts-less-css-style" media="print,screen" type="text/css">
        @@media print {

            h1 {
                display: none;
            }

            #btnPrintRow {
                display: none;
            }

            form {
                margin-top: 30px;
            }

            label {
                font-weight: bold;
            }

            h5 {
                text-decoration: underline;
            }

            @@page {
                margin: 0;
            }
        }
    </style>
}
