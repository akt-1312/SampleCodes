@{
    <style id="printStyle">
        .row {
            margin-bottom: 3px;
        }

        input[type] {
            border: none;
            border-bottom: 1px solid black;
            border-radius: 0px;
        }

        .form-control {
            background-color: transparent !important;
        }
        .border{
            background-color:gray;
        }
        .control-label {
            position: absolute;
            bottom: 0;
            width: 120px;
        }

        #btnPrintRow {
