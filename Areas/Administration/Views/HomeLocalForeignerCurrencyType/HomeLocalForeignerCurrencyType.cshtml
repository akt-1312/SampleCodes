@model HMS.Models.ViewModels.HomeLocalForeignerCurrencyTypeViewModel
@{
    ViewData["Title"] = "Unit";
    Layout = "~/Views/Shared/_HMSMainLayout.cshtml";
}

@section CurrentPageNavigation{
    <h4 class="page-title float-left">SuperAdmin</h4>

    <ol class="breadcrumb float-right">
        <li class="breadcrumb-item"><a href="#">HomeLocalForeignerCurrencyType</a></li>
        @*<li class="breadcrumb-item"><a href="#">Register</a></li>*@
    </ol>
}
@{
    <style>
        .btn-default {
            width: 60px;
            background-color: lightgreen;
        }

        .btn-cancel {
            width: 70px;
            background-color: lightcoral;
        }
    </style>
}
@section LeftSideMenu{
    <partial name="_AdministrationLeftSideMenuPartial" />
}
<div class="row">

    <div class="col-3 p-2 my-2 bg-light">
        <div class="card-box">
            <form asp-action="HomeLocalForeignerCurrencyType" method="post" id="formEX">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @if (Model.BtnActionName != "Save")
                {
                    <input type="hidden" asp-for="HomeLocalForeignerCurrencyType.HomeLocalForeignerCurrencyTypeId" />
                }
                <input type="hidden" asp-for="BtnActionName" />
                <div class="form-group">
                    <label asp-for="HomeLocalForeignerCurrencyType.HomeCurrencyTypeId" class="control-label"></label>
                    <select asp-for="HomeLocalForeignerCurrencyType.HomeCurrencyTypeId" class="form-control" asp-items="ViewBag.HomeCurrencyTypeId"><option value="">Select</option></select>
                    <span asp-validation-for="HomeLocalForeignerCurrencyType.HomeCurrencyTypeId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HomeLocalForeignerCurrencyType.LocalCurrencyTypeId" class="control-label"></label>
                    <select asp-for="HomeLocalForeignerCurrencyType.LocalCurrencyTypeId" class="form-control" asp-items="ViewBag.LocalCurrencyTypeId"><option value="">Select</option></select>
                    <span asp-validation-for="HomeLocalForeignerCurrencyType.LocalCurrencyTypeId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HomeLocalForeignerCurrencyType.ForeignerCurrencyTypeId" class="control-label"></label>
                    <select asp-for="HomeLocalForeignerCurrencyType.ForeignerCurrencyTypeId" class="form-control" asp-items="ViewBag.ForeignerCurrencyTypeId"><option value="">Select</option></select>
                    <span asp-validation-for="HomeLocalForeignerCurrencyType.ForeignerCurrencyTypeId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HomeLocalForeignerCurrencyType.NationalityId" class="control-label"></label>
                    <select asp-for="HomeLocalForeignerCurrencyType.NationalityId" class="form-control" asp-items="ViewBag.NationalityId"><option value="">Select</option></select>
                    <span asp-validation-for="HomeLocalForeignerCurrencyType.NationalityId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HomeLocalForeignerCurrencyType.MultiplyHomeToHome" class="control-label"></label>
                    <input asp-for="HomeLocalForeignerCurrencyType.MultiplyHomeToHome" class="form-control input-sm" />
                    <span asp-validation-for="HomeLocalForeignerCurrencyType.MultiplyHomeToHome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HomeLocalForeignerCurrencyType.MultiplyHomeToForeigner" class="control-label"></label>
                    <input asp-for="HomeLocalForeignerCurrencyType.MultiplyHomeToForeigner" class="form-control input-sm" />
                    <span asp-validation-for="HomeLocalForeignerCurrencyType.MultiplyHomeToForeigner" class="text-danger"></span>
                </div>

                <div class="form-group">
                    @if ((await authorizationService.AuthorizeAsync(User, "ExchangeSetupCreate")).Succeeded)
                    {
                        <button id="btnSaveSubmit" type="submit" name="btnSubmit" value="Create" class="btn btn-success btnSaveSubmitToggle">Save</button>
                    }
                    <button type="button" class="btn btn-secondary" onclick="ResetFormAndShowHideBtnSubmit('form#formEX')">Cancel</button>

                </div>

            </form>

        </div>
    </div>
    <div class="col-9 p-2 my-2 bg-light">
        <div class="card-box">
            <input type="hidden" asp-for="HomeLocalForeignerCurrencyType.HomeLocalForeignerCurrencyTypeId" />
            <table id="demo-foo-filtering" class="table table-striped table-bordered toggle-circle m-b-0" data-page-size="7">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.HomeLocalForeignerCurrencyType.HomeCurrencyTypeId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.HomeLocalForeignerCurrencyType.LocalCurrencyTypeId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.HomeLocalForeignerCurrencyType.ForeignerCurrencyTypeId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.HomeLocalForeignerCurrencyType.NationalityId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.HomeLocalForeignerCurrencyType.MultiplyHomeToHome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.HomeLocalForeignerCurrencyType.MultiplyHomeToForeigner)
                        </th>

                    </tr>
                </thead>
                <tbody>

                    @{var item = Model.HomeLocalForeignerCurrencyTypes.LastOrDefault();

                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.HomeCurrency.CurrencyCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LocalCurrency.CurrencyCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ForeignerCurrency.CurrencyCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nationality.NationalityName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MultiplyHomeToHome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MultiplyHomeToForeigner)
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
        </div>


    </div>
    @section Scripts{

        <!-- Counter js  -->
        <script src="~/plugins/waypoints/jquery.waypoints.min.js"></script>
        <script src="~/plugins/counterup/jquery.counterup.min.js"></script>


        <!--FooTable-->
        <script src="~/plugins/footable/js/footable.all.min.js"></script>

        <!--FooTable Example-->
        <script src="~/pages/jquery.footable.js"></script>
        <script>
        $(document).ready(function () {
             var successedAlertMessage = "@ViewBag.SuccessedAlertMessage";
            AlertSnackBarByActionName(successedAlertMessage);

            var actionName = "@Model.BtnActionName";
            if (actionName== "Delete") {
                $("#unitid").attr("readonly", true);
                $("#deptid").attr("disabled", true);
            }
        });
        </script>
    }

