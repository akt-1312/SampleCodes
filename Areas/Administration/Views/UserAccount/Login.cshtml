@model HMS.Models.ViewModels.Administration.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@{

    <style>

        .form-group.h3 {
            margin-bottom: 1rem;
            border: 0px;
        }

        .a {
            padding-left: 60px;
            color: #2c1c1f;
            /*-webkit-text-stroke-width: 1px;
            -webkit-text-stroke-color: rgba(0,123,255,.25);*/
        }

        .bgImage {
            height: 550px;
            width: 1300px;
        }

        .b {
            padding-top: 15px;
            padding-bottom: 15px;
        }

        .c {
            padding-left: 15px;
        }

        .d {
            background-color: white;
            opacity: 0.9;
            -webkit-box-shadow: 0px 0px 10px rgba(0,0,0,1);
            border-radius: 3px;
            /* border: 1px solid white;*/
        }

        .e {
            display: inline;
            position: fixed;
            /* width: 100%; */
            right: 10px;
            bottom: 11px;
        }

            .e > h1 {
                font-variant-caps: all-petite-caps;
            }

        .form-control {
            background-color: transparent;
            border-radius: .35rem;
            border-color: rgba(0,0,0,1);
            border-width: 1px;
        }

        .h3 {
            font-size: 17px;
            color: blueviolet;
        }

        .h3Padding {
            padding-top: 10px;
            padding-bottom: 1.5px;
        }

        .font {
            font-family: Century;
            font-size: 1.5em;
            text-align: center;
            padding-top: 35px;
            padding-right: 10px;
        }
        /*.animate
        {
            animation-delay:4s;
            animation-direction:alternate;
        }*/
        .positionLogin {
            right: 20px;
            position: fixed;
            bottom: 50px;
            width: 500px;
        }

        .opac {
            height: 100% !important;
            background-color: rgba(2,13,76,0.54);
        }

        input[type="checkbox"] {
            vertical-align: middle !important;
        }

        .input-group > .custom-select:not(:first-child), .input-group > .form-control:not(:first-child) {
            border-top-right-radius: 3px !important;
            border-bottom-right-radius: 3px !important;
            border-left: 0px;
            height: 34.4px;
        }

        .input-group-addon {
            background-color: transparent;
            border: 1px solid black !important;
            border-radius: 4px;
            padding: 6px 12px;
            border-top-right-radius: 0px;
            border-bottom-right-radius: 0px;
        }

            .input-group-addon > .fa {
                color: blueviolet;
            }

        .form-control:focus {
            box-shadow: none !important;
        }

        hr.style-eight {
            overflow: visible; /* For IE */
            padding: 0;
            border: none;
            border-top: medium double #333;
            color: #333;
            text-align: center;
            margin-bottom: 30px;
        }

            hr.style-eight:after {
                content: "Soft Software System";
                display: inline-block;
                position: relative;
                top: -0.9em;
                font-size: 1em;
                padding: 0 0.25em;
                background: white;
            }
    </style>


}

<div role="main" class="ma">
    <div class="row a opac">

    </div>
</div>

<div class="a e">
    <h1 align="center" class="font">@@2020 Soft Software System</h1>
</div>

<div class="d b formLogin positionLogin">
    <form method="post" class="">
        <div class="col-12">
            <div class="form-group h3">
                <h3 class="fa fa-plus-square fa-lg text-center h3Padding" style="display: block;
        text-align: center;
    ">
                    Soft - HMS
                </h3>
            </div>
            <hr class="style-eight" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group " style="margin-bottom: 0px;">
                <div class="row">
                    <div class="col-6">
                        @*<label asp-for="Email"></label>*@
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                            <input asp-for="Email" class="form-control" placeholder="@@ Email" value="softhmsadmin@gmail.com" autocomplete="off" autofocus spellcheck="false" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                            <input asp-for="Password" class="form-control" placeholder="@@ Password" value="softhmsadmin2020" autocomplete="off" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row" style="margin-top:20px;">
                    <div class="col-6 offset-6">
                        <div class="row">
                            <div class="col-7">
                                <div class="checkbox" style="padding: .375rem 0px;">

                                    <input asp-for="RememberMe" />
                                    <label asp-for="RememberMe">
                                        @Html.DisplayNameFor(m => m.RememberMe)
                                    </label>
                                </div>
                            </div>
                            <div class="col-5">
                                <button type="submit" class="btn btn-primary">Login <i class="fa fa-sign-in-alt"></i></button>
                            </div>
                        </div>
                    </div>
                </div>


            </div>



        </div>
    </form>
</div>
@section Scripts{

    <script>
        $(window).load(function () {

            setInterval(function () { $('.font').fadeIn("slow") }, 3000);

            setInterval(function () { $('.formLogin').fadeIn("slow") }, 8000);
        });
    </script>

}
