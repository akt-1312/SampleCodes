@model HMS.Models.Administration.Service

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_HMSMainLayout.cshtml";
}

<h1>Edit</h1>

<h4>Service</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ServiceId" />
            <div class="form-group">
                <label asp-for="ServiceName" class="control-label"></label>
                <input asp-for="ServiceName" class="form-control" />
                <span asp-validation-for="ServiceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceRateAmount" class="control-label"></label>
                <input asp-for="ServiceRateAmount" class="form-control" />
                <span asp-validation-for="ServiceRateAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceGroupTypeId" class="control-label"></label>
                <select asp-for="ServiceGroupTypeId" class="form-control" asp-items="ViewBag.ServiceGroupTypeId"></select>
                <span asp-validation-for="ServiceGroupTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrencyTypeId" class="control-label"></label>
                <select asp-for="CurrencyTypeId" class="form-control" asp-items="ViewBag.CurrencyTypeId"></select>
                <span asp-validation-for="CurrencyTypeId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsForNormal" /> @Html.DisplayNameFor(model => model.IsForNormal)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsForEmergency" /> @Html.DisplayNameFor(model => model.IsForEmergency)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CreatedDate" class="control-label"></label>
                <input asp-for="CreatedDate" class="form-control" />
                <span asp-validation-for="CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdatedDate" class="control-label"></label>
                <input asp-for="UpdatedDate" class="form-control" />
                <span asp-validation-for="UpdatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

