@section Scripts{

<script src="~/js/PatientRegistrationCommon.js"></script>
    <script>

        jQuery.validator.addMethod("remarkrequirewhenupdate",
            function (value, element, param) {
                var regId = $("#PatientRegId").val();
                if (regId != null && regId != "0" && regId != "") {
                    var remark = $("#UpdateRemarks").val();
                    if (remark == null || remark == "") {
                        return false;
                    } else {
                        return true;
                    }
                } else {
                    return true;
                }
            });
        jQuery.validator.unobtrusive.adapters.addBool("remarkrequirewhenupdate");

        jQuery.validator.addMethod("requiredwhennormalregtype",
            function (value, element, param) {
                var regType = "@Model.PatientRegistration.RegistrationType.ToString()";
                var normalRegType = "@RegistrationType.Normal.ToString()";
                if (regType.toLowerCase().trim() == normalRegType.trim().toLowerCase()) {
                    if (value == null || value.trim() == "") {
                        return false;
                    } else {
                        return true;
                    }
                } else {
                    return true;
                }
            });
        jQuery.validator.unobtrusive.adapters.addBool("requiredwhennormalregtype");

        $(document).ready(function () {

            FormSubmitLoadingPage("form#formRegUpdate");

            var successedAlertMessage = "@ViewBag.SuccessedAlertMessage";
            AlertSnackBarByActionName(successedAlertMessage);

            // Add down arrow icon for collapse element which is open by default
            $(".collapse.show").each(function () {
                $(this).prev(".card-header").find(".fa").addClass("fa-angle-down").removeClass("fa-angle-right");
            });

            // Toggle right and down arrow icon on show hide of collapse element
            $(".collapse").on('show.bs.collapse', function () {
                $(this).prev(".collapseHeader").find(".fa").removeClass("fa-angle-right").addClass("fa-angle-down");
            }).on('hide.bs.collapse', function () {
                $(this).prev(".collapseHeader").find(".fa").removeClass("fa-angle-down").addClass("fa-angle-right");
            });

            
            var age = "@ViewBag.Age";
            @*alert("@ViewBag.Age");*@
            if (age != "" && age != null && age != "0") {
                $("#txtAge").val(age);
            }
            else if(age=="0") {
                $("#txtAge").val("");
            }

            if ("@ViewBag.RegName" == "" || "@ViewBag.RegName" == null) {
                $("#headerRegName").html("Normal");
                $("#regName").val("Normal");
            }           


            GetRegFees();

            function GetRegFees() {
                var patientRegId = $("#PatientRegId").val();
                var url = '@Url.Content("~/")' + "CommonAjaxCall/PatientRegistrationAjaxCall/GetServiceFeesAfterRegistration";

                $.getJSON(url, { regId : patientRegId }, function (data) {
                    if ($("#regFeeTable tbody").length == 0) {
                        $("#regFeeTable").append("<tbody id='regFeeTbody'></tbody>");
                    }
                    //console.log(data.length);
                    //console.log(data);

                    if (data != null && data.length > 0) {
                        var totalAmmount = 0;
                        $.each(data, function (i, registrationFees) {

                            var chkId = "chkFOC" + i;

                            var tdNo = '<td class="">' + (i + 1) + '</td>';
                            var tdServiceName = '<td class="tdServiceName">' + registrationFees.serviceName + '</td>';
                            var tdServiceAmmountAndCurrency = '<td class="tdServiceAmmountAndCurrency">' + registrationFees.serviceAmmount + '<span style="float:right;">' + registrationFees.currencyCode + '</span>' + '</td>';
                            var tdServiceAmmount = '<td class="tdServiceAmmount" hidden>' + registrationFees.serviceAmmount + '</td>';
                            var tdServiceFoc = '<td class="tdServiceFoc" id="tdFOC">' + '<input class="chkFOC" type="checkbox"' + 'id=' + '"' + chkId + '"' + '>' + '</input>' + '</td>';
                            var tdServiceCurrencyCode = '<td class="tdServiceCurrencyCode" hidden>' + registrationFees.currencyCode + '</td>';

                            totalAmmount += parseFloat(registrationFees.serviceAmmount);
                            $("tbody").append('<tr class="TrDataLoop">' + tdNo + tdServiceName + tdServiceAmmountAndCurrency + tdServiceAmmount + tdServiceFoc + tdServiceCurrencyCode + /*tdDel + */'</tr>');

                            $(".chkFOC#" + chkId).change(function () {
                                //console.log(registrationFees.serviceAmmount);
                                if ($(this).is(':checked')) {
                                    totalAmmount = totalAmmount - parseFloat(registrationFees.serviceAmmount);
                                }
                                else if (!($(this).is(':checked'))) {
                                    totalAmmount = totalAmmount + parseFloat(registrationFees.serviceAmmount);
                                }
                                $("#lblTotalAmmount").html(totalAmmount.toFixed(4) + " " + registrationFees.currencyCode);
                            });

                            //console.log(registrationFees.serviceId);
                            //console.log(registrationFees.service.serviceName);
                        });
                        //$("tbody").append('<tr>' + '<td>' + '</td>' + '<td class="text-right" style="display:block;">' + '<label>' + 'Total :' + '</label>' + '</td>' + '<td class="text-right">' + '<label id="lblTotalAmmount">' + '</label>' + '</td>' + '<td>' + '</td>' +/*'<td>'+'</td>'+*/'</tr>')
                        $("tbody").append('<tr><td class="text-right" colspan="2" sytle="display:block;"><label>Total :</label></td><td class="text-right"><label id="lblTotalAmmount"></label></td><td></td>' + '</tr>');
                        $("#lblTotalAmmount").html(totalAmmount.toFixed(4) + " " + data[0].currencyCode);
                    }

                });
            }
    });
    </script>

