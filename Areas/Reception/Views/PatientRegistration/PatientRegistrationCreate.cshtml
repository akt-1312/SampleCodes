            }
            if ("@ViewBag.PatientIdentityType" != "" || "@ViewBag.PatientIdentityType" != null) {
                    $("input:radio[value='@ViewBag.PatientIdentityType']").attr("checked","checked");
                }

            $('select#ddlRegName option[value="@ViewBag.RegName"]').attr("selected", "selected");
            
            function RadioMRNo() {
                if ($('input[type=radio][name=rdoMRNo]:checked').val() == "Auto") {
                    $("#txtMRNo").prop("readonly", true);
                    $("#btnRegDate").prop("disabled", true);
                }
            }
