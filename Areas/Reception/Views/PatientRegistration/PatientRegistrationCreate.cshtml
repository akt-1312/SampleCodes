@model HMS.Models.ViewModels.Reception.PatientRegistrationAKTViewModel

@{
    ViewData["Title"] = "PatientRegistrationCreate";
    Layout = "~/Views/Shared/_HMSMainLayout.cshtml";
}

@{
    <style>
        .row {
            margin-bottom: 3px;
        }

        label {
            font-weight: bold;
        }

        h5 {
            text-decoration: underline;
            margin-top:0px;
        }

        .border {
            height: auto;
        }

        /*body{
            margin-bottom:0px;
        }*/

        .accordion .fa {
            margin-right: 0.5rem;
            font-size: 24px;
            font-weight: bold;
            position: relative;
            top: 2px;
        }

        .onlyNormalRegRequiredField{
            display: @(ViewBag.RegName == RegistrationType.Emergency.ToString() ? "none" : "")
        }

        div.collapseHeader h5{
            width:100%;
            border:1px solid;
        }

        div.collapseHeader h5 a{
            width:100%;
            text-align:start;
        }
    </style>

}

@section CurrentPageNavigation{
    <h4 class="page-title float-left">Reception</h4>

    <ol class="breadcrumb float-right">
        <li class="breadcrumb-item"><a href="#">Patient Registration Create</a></li>
        @*<li class="breadcrumb-item"><a href="#">Register</a></li>*@
    </ol>
}

@section LeftSideMenu{
    <partial name="_ReceptionLeftSideMenuPartial" />
}


<form method="post" enctype="multipart/form-data" id="formRegCreate">
    @*<input hidden name="RegName"
        value="@ViewBag.RegName" id="regName" />*@
    <div asp-validation-summary="ModelOnly"></div>
    <div class="">
        <div class="card-box w-100">
            <div class="row my-3">
                @*<div class="col-6">
                        <h4 id="headerRegName">@ViewBag.RegName</h4>
                    </div>*@
                <div class="col-12 text-center">
                    <div>
                        <h4>@(Model.PatientRegistration.RegistrationType == RegistrationType.Emergency ? "Emergency Registration" : "Normal Registration")</h4>
                        <select hidden id="ddlRegName" asp-for="PatientRegistration.RegistrationType" class="form-control input-sm">
                            @foreach (var item in Enum.GetNames(typeof(RegistrationType)))
                            {
                                <option value="@item">@item</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="row">
