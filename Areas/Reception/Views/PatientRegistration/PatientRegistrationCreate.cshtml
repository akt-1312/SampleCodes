            $('input[type=radio][name=rdoMRNo]').change(function () {
                if (this.value == 'Manual') {
                    $("#txtMRNo").val("");
                    $("#txtMRNo").prop("readonly", false);
                    $("#btnRegDate").prop("disabled", false);

                }
                else if (this.value == 'Auto') {
                    RadioMRNo();
                    $("#txtMRNo").val("");
                    //$("#btnRegDate").prop("disabled", true);
                }
                @*else if(this.value == 'Auto'){

                    $("#txtMRNo").prop("readonly", true);
                    $("#txtRegDate").prop("readonly", true);

                    var url = '@Url.Content("~/")' + "Registration/PatientRegistrationAKT/MRNoSerial";

            $.getJSON(url, { CountOfDigit: "@ViewBag.MRNoCount" }, function (data) {
