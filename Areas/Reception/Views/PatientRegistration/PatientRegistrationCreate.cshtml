            });

            function GetRegFees() {
                var ddlNationality = $("#ddlNationality").val();
                var ddlRegName = $("#ddlRegName").val();
                //console.log(ddlNationality);
                @*if (ddlNationality.trim() == "Myanmar" || ddlNationality.trim() == "") {
                    var url = '@Url.Content("~/")' + "CommonAjaxCall/PatientRegistrationAjaxCall/GetRegTypes";
                } else {
                    var url = '@Url.Content("~/")' + "CommonAjaxCall/PatientRegistrationAjaxCall/GetRegTypesForForeigner";
                }*@

                var url = '@Url.Content("~/")' + "CommonAjaxCall/PatientRegistrationAjaxCall/GetServiceFees";

                $.getJSON(url, { Nationality : ddlNationality, RegName: ddlRegName }, function (data) {
                    if ($("#regFeeTable tbody").length == 0) {
                        $("#regFeeTable").append("<tbody id='regFeeTbody'></tbody>");
                    }
                    //console.log(data.length);
                    //console.log(data);

                    if (data != null && data.length > 0) {
                        var totalAmmount = 0;
                        $.each(data, function (i, registrationFees) {

                            var chkId = "chkFOC" + i;

                            var tdNo = '<td class="">' + (i + 1) + '</td>';
                            var tdServiceName = '<td class="tdServiceName">' + registrationFees.serviceName + '</td>';
                            var tdServiceAmmountAndCurrency = '<td class="tdServiceAmmountAndCurrency">' + registrationFees.serviceAmmount + '<span style="float:right;">' + registrationFees.currencyCode + '</span>' + '</td>';
                            var tdServiceAmmount = '<td class="tdServiceAmmount" hidden>' + registrationFees.serviceAmmount + '</td>';
                            var tdServiceFoc = '<td class="tdServiceFoc" id="tdFOC">' + '<input class="chkFOC" type="checkbox"' + 'id=' + '"' + chkId + '"' + '>' + '</input>' + '</td>';
                            var tdServiceCurrencyCode = '<td class="tdServiceCurrencyCode" hidden>' + registrationFees.currencyCode + '</td>';

                            totalAmmount += parseFloat(registrationFees.serviceAmmount);
                            $("tbody").append('<tr class="TrDataLoop">' + tdNo + tdServiceName + tdServiceAmmountAndCurrency + tdServiceAmmount + tdServiceFoc + tdServiceCurrencyCode + /*tdDel + */'</tr>');

                            $(".chkFOC#" + chkId).change(function () {
                                //console.log(registrationFees.serviceAmmount);
                                if ($(this).is(':checked')) {
                                    totalAmmount = totalAmmount - parseFloat(registrationFees.serviceAmmount);
                                }
                                else if (!($(this).is(':checked'))) {
                                    totalAmmount = totalAmmount + parseFloat(registrationFees.serviceAmmount);
                                }
                                $("#lblTotalAmmount").html(totalAmmount.toFixed(4) + " " + registrationFees.currencyCode);
                            });

                            //console.log(registrationFees.serviceId);
                            //console.log(registrationFees.service.serviceName);
                        });
                        //$("tbody").append('<tr>' + '<td>' + '</td>' + '<td class="text-right" style="display:block;">' + '<label>' + 'Total :' + '</label>' + '</td>' + '<td class="text-right">' + '<label id="lblTotalAmmount">' + '</label>' + '</td>' + '<td>' + '</td>' +/*'<td>'+'</td>'+*/'</tr>')
                        $("tbody").append('<tr><td class="text-right" colspan="2" sytle="display:block;"><label>Total :</label></td><td class="text-right"><label id="lblTotalAmmount"></label></td><td></td>' + '</tr>');
                        $("#lblTotalAmmount").html(totalAmmount.toFixed(4) + " " + data[0].currencyCode);
                    }

                });

            }

            GetRegFees();

            $("form").on("click", "#btnSave", function () {
                //var regTotal = ($("#lblTotalAmmount").text());
                //$("#txtTotalAmmount").val(regTotal);


                var serviceFees = new Array();

                $("#regFeeTable TBODY TR.TrDataLoop").each(function () {
