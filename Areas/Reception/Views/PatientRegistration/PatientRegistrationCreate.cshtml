    <script src="~/js/PatientRegistrationCommon.js"></script>
    <script>

        jQuery.validator.addMethod("requiredwhennormalregtype",
            function (value, element, param) {

                var regType = $("#ddlRegName").val().toString().trim();
                var normalRegType = "@RegistrationType.Normal.ToString()";
                if (regType.toLowerCase() == normalRegType.trim().toLowerCase()) {
                    if (value == null || value.trim() == "") {
                        return false;
                    } else {
                        return true;
                    }
                } else {
                    return true;
                }
            });
        jQuery.validator.unobtrusive.adapters.addBool("requiredwhennormalregtype");

        $(document).ready(function () {

            FormSubmitLoadingPage("form#formRegCreate");

            // Add down arrow icon for collapse element which is open by default
            $(".collapse.show").each(function () {
                $(this).prev(".card-header").find(".fa").addClass("fa-angle-down").removeClass("fa-angle-right");
            });

            // Toggle right and down arrow icon on show hide of collapse element
            $(".collapse").on('show.bs.collapse', function () {
                $(this).prev(".collapseHeader").find(".fa").removeClass("fa-angle-right").addClass("fa-angle-down");
            }).on('hide.bs.collapse', function () {
                $(this).prev(".collapseHeader").find(".fa").removeClass("fa-angle-down").addClass("fa-angle-right");
            });



            $("#txtAge").val("");
            var age = "@ViewBag.Age";
            if (age != "" && age != null && age != "0") {
                $("#txtAge").val(age);
            }
            else if(age=="0") {
                $("#txtAge").val("");
            }

            //$("input:radio[value='Auto']").attr("checked","checked");

            if ("@ViewBag.rdoMRNo" != "" || "@ViewBag.rdoMRNo" != null) {

