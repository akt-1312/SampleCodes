@model DrConsultationPatientHistoryAndExamViewModel
@{
    ViewData["Title"] = "DrConsultationPatientHistoryAndExam";
    Layout = "~/Views/Shared/_HMSMainLayout.cshtml";
}

<style>
    textarea.txtArea {
        min-height: 50px;
    }

    .tblExam {
        min-height: 100px;
    }

    
</style>

@section CurrentPageNavigation{
    <h4 class="page-title float-left">Doctor WorkBench</h4>

    <ol class="breadcrumb float-right">
        <li class="breadcrumb-item"><a href="#">Doctor Consultation</a></li>
        @*<li class="breadcrumb-item"><a href="#">Register</a></li>*@
    </ol>
}

@section LeftSideMenu{
    <partial name="_DoctorWorkBenchLeftSideMenuPartial" />
}

<div class="row">
    <div class="card-box w-100" style="margin-bottom:5px;">
        <partial name="_PatientAppointmentDataPartial" for="@Model.DoctorConsultationViewModel.DoctorAppointmentData" />
    </div>
</div>

<partial name="_DrConsultationActionsTabPartial" for="@Model.DoctorConsultationViewModel" />

<div class="row choosedDrActionBlock" id="blockPatientHistoryAndExam">
    <div class="card-box w-100">
        <div class="col-12">
            <div class="row mb-1">
                <div class="col-3" style="display:flex; align-items:center;">
                    <label>Chief Complaints</label>
                </div>
                <div class="col-9">
                    <textarea class="form-control txtArea"></textarea>
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-3" style="display:flex; align-items:center;">
                    <label>Past Medical History</label>
                </div>
                <div class="col-9">
                    <textarea class="form-control txtArea"></textarea>
                </div>
            </div>

            <div class="row mb-1">
                <div class="col-3" style="display:flex; align-items:center;">
                    <label>Past Surgical History</label>
                </div>
                <div class="col-9">
                    <textarea class="form-control txtArea"></textarea>
                </div>
            </div>

            <div class="row mb-1">
                <div class="col-3" style="display:flex; align-items:center;">
                    <label>Drug History</label>
                </div>
                <div class="col-9">
                    <textarea class="form-control txtArea"></textarea>
                </div>
            </div>

            <div class="row mb-1">
                <div class="col-3" style="display:flex; align-items:center;">
                    <label>Family And Social History</label>
                </div>
                <div class="col-9">
                    <textarea class="form-control txtArea"></textarea>
                </div>
            </div>

            <div class="row mb-1">
                <div class="col-3" style="display:flex; align-items:center;">
                    <label>Immunization History</label>
                </div>
                <div class="col-9">
                    <textarea class="form-control txtArea"></textarea>
                </div>
            </div>

            <div class="row mb-1">
                <div class="col-3" style="display:flex; align-items:center;">
                    <label>ASFDFDDFAFD System Examination</label>
                </div>
                <div class="col-9">
                    <textarea class="form-control txtArea"></textarea>
                </div>
            </div>

            <div class="row mb-1">
                <div class="col-3" style="display:flex; align-items:center;">
                    <label>Respiratory System Examination</label>
                </div>
                <div class="col-9">
                    <textarea class="form-control txtArea"></textarea>
                </div>
            </div>

            <div class="row mb-1">
                <div class="col-3" style="display:flex; align-items:center;">
                    <label>Abdominal Examination</label>
                </div>
                <div class="col-9">
                    <textarea class="form-control txtArea"></textarea>
                </div>
            </div>

            <div class="row mb-1">
                <div class="col-3" style="display:flex; align-items:center;">
                    <label>Neurological Examination</label>
                </div>
                <div class="col-9">
                    <textarea class="form-control txtArea"></textarea>
                </div>
            </div>

            <div class="row mb-1">
                <div class="col-3" style="display:flex; align-items:center;">
                    <label>Remarks</label>
                </div>
                <div class="col-9">
                    <textarea class="form-control txtArea"></textarea>
                </div>
            </div>

            <div class="row mb-1">
                <div class="col-3" style="display:flex; align-items:center;">
                    <label>History Taking</label>
                </div>
                <div class="col-9 tblExam">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Question</th>
                                <th>Response</th>
                                <th>Date</th>
                                <th>Comments</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row mb-1">
                <div class="col-3" style="display:flex; align-items:center;">
                    <label>General Examination</label>
                </div>
                <div class="col-9 tblExam">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Question</th>
                                <th>Response</th>
                                <th>Specify</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row mb-1">
                <div class="col-3" style="display:flex; align-items:center;">
                    <label>Local Examination</label>
                </div>
                <div class="col-9 tblExam">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Questions</th>
                                <th>Details</th>
                                <th>Specify</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-12" style="margin-top:20px;">
            <button class="btn-success">Save SOAP Details</button>
            <button class="btn-success">Back To Patient List</button>
            <button class="btn-success">Print</button>
        </div>
    </div>
</div>



@section Scripts{
    <script>
        
    </script>
}